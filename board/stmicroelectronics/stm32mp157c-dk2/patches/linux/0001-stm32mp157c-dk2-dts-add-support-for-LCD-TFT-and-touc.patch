+++ b/arch/arm/boot/dts/stm32mp157c-dk2.dts
@@ -124,3 +124,25 @@
 	};
 };
 
+&i2c1 {
+        touchscreen@2a {
+                compatible = "focaltech,ft6236";
+                reg = <0x2a>;
+                interrupts = <2 2>;
+                interrupt-parent = <&gpiof>;
+                interrupt-controller;
+                touchscreen-size-x = <480>;
+                touchscreen-size-y = <800>;
+                status = "okay";
+        };
+        touchscreen@38 {
+                compatible = "focaltech,ft6236";
+                reg = <0x2a>;
+                interrupts = <2 2>;
+                interrupt-parent = <&gpiof>;
+                interrupt-controller;
+                touchscreen-size-x = <480>;
+                touchscreen-size-y = <800>;
+                status = "okay";
+        };
+};
